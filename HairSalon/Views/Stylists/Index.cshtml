<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>To Do List</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
      <h1>Hair Salon</h1>
      <h2>Pick a stylist to add a client</h2>
      <ul>
        @if (Model.Count == 0)
        {
          <p>No stylists have been added yet!</p>
        }

        @if(Model.Count != 0)
        {
          @foreach (var stylist in Model)
          {

            <a href="/stylists/@stylist.GetId()">@stylist.GetName()</a><br>
          }
        }
      </ul>
      <a href="/">Back to homepage</a>
  </div>
</body>
</html>
