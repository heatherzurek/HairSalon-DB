@using HairSalon.Models;
<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Hair Salon</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <h1>All Salon Clients</h1>
    <center><a href="/">Home</a> <a href="/stylists">View Stylists</a> </center>
    <hr>

    <br>
    <ul>
      @if (Model.Count == 0)
      {
        <p>You have no clients!</p>
      }
      @if(Model.Count != 0)
      {
        @foreach (Client client in Model)
        {
          <li><a href="/clients/@client.GetId()">@client.GetName()</a></li>
        }
      }
    </ul>

    <form action="/stylists/delete-all-clients" method="post">
      <button class="btn btn-danger" type="submit">Delete All Clients</button>
    </form>
  </div>
</body>
</html>
