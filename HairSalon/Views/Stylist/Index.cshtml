<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>To Do List</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="jumbotron">
      <h1>Cut n' Paste Salon</h1>
    </div>
      <div class="container">
      <h2>Select Stylist</h2>
      <ul>
        @if (Model.Count == 0)
        {
          <li>No stylists have been added yet!</li>
        }

        @if(Model.Count != 0)
        {
          @foreach (var stylist in Model)
          {

            <a href="/stylists/@stylist.GetId()">@stylist.GetName()</a><br>
          }
        }
      </ul>

      <!-- <form action="/stylists/delete" method="post">
       <button class="btn btn-danger" type="submit">Delete all stylists</button>
     </form> -->

      <a href="/">Back to homepage</a>
  </div>
</body>
</html>
