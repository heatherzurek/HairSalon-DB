<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Hair Salon</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <h2>View @Model["stylist"].GetName()'s Clients Here</h2>
    <hr>
    <ol>
      @if (Model.Count == 0)
      {
        <p>No clients have been added yet!</p>
      }
      @if(Model.Count != 0)
      {
        @foreach (var client in @Model["clients"])
        {
          <li><a href="/stylists/@Model["stylist"].GetId()/clients/@client.GetId()">@client.GetName()</a></li>
        }
      }
    </ol>
    <a href="/stylists/@Model["stylist"].GetId()/clients/new">Add a new client</a><br><br>

    <form action='/stylists/@Model["stylist"].GetId()/edit' method="post">
      <button type="submit" class="btn btn-warning">Edit Stylist</button>
    </form>
    <br>
    <br>
    <br>

    <form action='/stylists/@Model["stylist"].GetId()/delete' method="post">
      <button type="submit" class="btn btn-dark">Delete Stylist</button>
    </form>

    <a href="/stylists">Return to stylist list</a>
    <a href="/">Return to homepage</a>
  </div>
</body>
</html>
