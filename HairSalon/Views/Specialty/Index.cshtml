<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title></title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <h1>Hair Salon</h1>
    <center><a href="/">Home</a></center>
    <hr>
    <h2>Available Specialties:</h2>
    
    @if (@Model.Count == 0)
    {
      <h3>No specialties have been added yet!</h3>
    }

    <ul>
      @foreach (var specialty in Model)
      {
        <li><a href='/specialties/@specialty.GetId()'>@specialty.GetType()</a></li>
      }
    </ul>


    <center><a href="/specialties/new">Add a new specialty</a></center>
  </div>

</body>
</html>
